<div class="container">
	<div class="row">
        <div class="span12">
    		<div class="" id="loginModal">
              <div class="modal-header">
                <h3>Have an Account?</h3>
              </div>
              <div class="modal-body">
                <div class="well">
                  <ul class="nav nav-tabs">
                    <li class="active"><a href="#login" data-toggle="tab">Login</a></li>
                    <li><a href="#create" data-toggle="tab">Create Account</a></li>
                  </ul>
                  <div id="myTabContent" class="tab-content">
                    <div class="tab-pane active in" id="login">
                      <form {{action 'authenticate' on='submit'}} class="form-horizontal">
                        <fieldset>
                          <div id="legend">
                            <legend class="">Login</legend>
                          </div>
                          <div class="control-group">
                            <!-- Username -->
                            <label class="control-label"  for="identification">Username</label>
                            <div class="controls">
                              {{input id='identification' placeholder='Enter Login' class='input-xlarge' value=identification}}
                            </div>
                          </div>

                          <div class="control-group">
                            <!-- Password-->
                            <label class="control-label" for="password">Password</label>
                            <div class="controls">
                              {{input id='password' placeholder='Enter Password' type='password'  class='input-xlarge' value=password}}
                            </div>
                          </div>
                          <div class="control-group">
                            <!-- Button -->
                            <div class="controls">
															<br>
                              <button type="submit" class="btn btn-success">Login</button>
                              {{#if errorMessage}}
                                <p>{{errorMessage}}</p>
                              {{/if}}
                            </div>
                          </div>
                        </fieldset>
                      </form>
                    </div>
                      <div class="tab-pane fade" id="create">
                        <div id="legend">
                          <legend class="">Register</legend>
                        </div>
                        <form id="tab">
                          <label>Username</label>
                          <input type="text" value="" class="input-xlarge">
                          <label>First Name</label>
                          <input type="text" value="" class="input-xlarge">
                          <label>Last Name</label>
                          <input type="text" value="" class="input-xlarge">
                          <label>Email</label>
                          <input type="text" value="" class="input-xlarge">
                          <div>
                            <button class="btn btn-primary">Create Account</button>
                          </div>
                        </form>
                      </div>
                </div>
              </div>
            </div>
        </div>
	    </div>
    </div>
</div>
