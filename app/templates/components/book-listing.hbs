<div class="container">
  <div class="well"><center><h2 class="sub-header">All Books</h2></center></div>
    <div class="col-xs-2"></div>
      <div class="well col-xs-8">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>#</th>
              <th>Book Name</th>
              <th>Description</th>
              <th>Cover Picture</th>
              <th style="width: 36px;"></th>
            </tr>
          </thead>
          <tbody>
            {{#each content as |book|}}
            <tr>
              <td>{{book.id}}</td>
              <td>{{book.title}}</td>
              <td>{{book.description}}</td>
              <td><img src="{{book.image}}" style="width:70px;height:80px;" /></td>
              <td><button type="button" class="btn btn-info">To reserve</button></td>
            </tr>
            {{/each}}
          </tbody>
      </table>
</div>
